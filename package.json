{
  "name": "react-playlist",
  "version": "1.0.0",
  "description": "Simple react todo app ",
  "main": "index.js",
  "scripts": {
    "start": "npm run build",
    "build": "webpack -d && cp src/index.html dist/index.html && webpack-dev-server --content-base src/ --inline --hot --port 1234",
    "build:prod": "webpack -p && cp src/index.html dist/index.html",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pradhan2017/react-todo-app.git"
  },
  "author": "me",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Pradhan2017/react-todo-app/issues"
  },
  "homepage": "https://github.com/Pradhan2017/react-todo-app",
  "dependencies": {
    "create-react-class": "^15.6.3",
    "css-loader": "^0.28.9",
    "lodash": "^4.17.5",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "really-smooth-scroll": "^2.1.1",
    "style-loader": "^0.20.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "webpack": "^3.11.0",
    "webpack-dev-server": "^2.11.1"
  }
